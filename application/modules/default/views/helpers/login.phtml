<script type="text/javascript">
function createUserMenu() {
	$(".userScreen-u").click(function (e) {
	 
		e.preventDefault();
		$("#userScreen-menu").css("position","absolute");
	$("#userScreen-menu").css("left",($(".userScreen-u").offset().left+($(".userScreen-u").width()-$("#userScreen-menu").width())));
		
		
		$("#userScreen-menu").fadeToggle("slow", "linear");
		$(".userScreen-u").toggleClass("menu-open");
	});
	$("#userScreen-menu").mouseup(function () {
		return false;
	});
	$(document).mouseup(function (e) {
		if ($(e.target).parent("a.userScreen-u").length == 0) {
		$("#userScreen-menu").css("position","");
			$(".userScreen-u").removeClass("menu-open");
			$("#userScreen-menu").hide();
		}
	});
}

</script>

